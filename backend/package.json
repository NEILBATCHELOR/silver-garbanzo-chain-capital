{
  "name": "chain-capital-backend",
  "version": "1.0.0",
  "description": "Chain Capital Backend - Fastify + Prisma API services",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev:accurate": "tsx server-enhanced-accurate.ts",
    "start:accurate": "tsx server-enhanced-accurate.ts",
    "kill:port": "lsof -ti:3001 | xargs kill || true",
    "check:port": "tsx check-port.ts",
    "dev:test": "NODE_ENV=test tsx src/server-test.ts",
    "start:production": "NODE_ENV=production node dist/server-production.js",
    "start:development": "NODE_ENV=development node dist/server-development.js",
    "start:test": "NODE_ENV=test node dist/server-test.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/infrastructure/database/seed.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:investors": "tsx test-investor-service.ts",
    "test:tokens": "tsx test-token-services.js",
    "test:users": "tsx test-user-role-service.ts",
    "test:documents": "tsx test-document-service.ts",
    "test:subscriptions": "tsx test-subscription-service.ts",
    "test:wallets": "tsx test-wallet-services.ts",
    "test:hsm": "tsx test-hsm-integration.ts",
    "test:servers": "node test-server-implementation.js",
    "test:integration": "tsx test-enhanced-server-integration.ts",
    "hsm:health": "tsx -e \"import { createHSMService, getEnvConfig } from './src/services/wallets/hsm/index'; const hsm = createHSMService(getEnvConfig()); hsm.validateHSMConfiguration().then(r => console.log(JSON.stringify(r, null, 2)))\"",
    "hsm:config": "tsx -e \"import { getEnvConfig, validateConfig } from './src/services/wallets/hsm/index'; const config = getEnvConfig(); console.log('Config:', config); console.log('Validation:', validateConfig(config));\"",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "clean": "rm -rf dist",
    "prebuild": "pnpm clean",
    "docker:build": "docker build -t chain-capital-backend .",
    "docker:run": "docker run -p 3001:3001 chain-capital-backend"
  },
  "dependencies": {
    "@aws-sdk/client-cloudhsm-v2": "^3.940.0",
    "@aws-sdk/client-kms": "^3.940.0",
    "@aws-sdk/client-sts": "^3.940.0",
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-admin": "^4.7.0",
    "@azure/keyvault-keys": "^4.10.0",
    "@fastify/auth": "^4.6.1",
    "@fastify/autoload": "^5.10.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.2.0",
    "@fastify/type-provider-typebox": "^5.2.0",
    "@fastify/websocket": "^10.0.1",
    "@google-cloud/kms": "^5.2.1",
    "@prisma/client": "^6.19.0",
    "@sinclair/typebox": "^0.34.41",
    "@solana/web3.js": "^1.98.4",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.7",
    "dayjs": "^1.11.19",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.6.1",
    "ecpair": "^3.0.0",
    "ethers": "^6.15.0",
    "fastify": "^4.29.1",
    "fastify-plugin": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "near-api-js": "^4.0.4",
    "node-cron": "^4.2.1",
    "node-forge": "^1.3.2",
    "pino": "^9.14.0",
    "pino-pretty": "^11.3.0",
    "tiny-secp256k1": "^2.2.4",
    "tweetnacl": "^1.0.3",
    "uuid": "^9.0.1",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@types/node-forge": "^1.3.14",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.0",
    "prisma": "^6.19.0",
    "rimraf": "^6.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.17.0"
  },
  "keywords": [
    "fastify",
    "prisma",
    "typescript",
    "api",
    "backend",
    "chain-capital",
    "fintech",
    "tokens",
    "compliance"
  ],
  "author": "Chain Capital Team",
  "license": "MIT"
}
